<h1>New Article</h1>

<form action="/articles" method="POST" role="form">

  <div class="form-group">
    <label for="title" class="hidden">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Title" name="title">
  </div>


  <!-- Author will be passed in as a username. -->
  <div class="form-group">
    <label for="author" class="hidden">Author</label>
    <input type="text" class="form-control" id="author" placeholder="Author" name="author">
  </div><br />

  <!-- This will become the description. -->
  <div class="form-group">
    <label for="body" class="hidden">Body</label>
    <textarea type="text" class="form-control" id="body" placeholder="Body" name="body"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
